<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Define la forma como un rectángulo, que es la base para un campo de texto -->

    <solid android:color="#F5F5F5"/>
    <!-- Un color gris muy claro para el fondo del campo de texto (casi blanco) -->

    <corners android:radius="24dp"/>
    <!-- Bordes redondeados con un radio generoso (24dp) para darle la forma de 'píldora' o burbuja moderna -->

    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp"/>
    <!-- Agrega un poco de espacio interior (padding) para que el texto no toque los bordes -->

    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>
    <!-- Opcionalmente, puedes añadir un borde muy fino y sutil para definir mejor el área del campo. -->

</shape>
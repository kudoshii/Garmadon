<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Define la forma del drawable como un rectángulo (burbuja) -->

    <corners android:radius="12dp" />
    <!-- Establece un radio de 12dp en las esquinas para dar el efecto de burbuja redondeada -->

    <solid android:color="#E0E0E0" />
    <!-- Color sólido gris claro (similar a un blanco roto) para los mensajes RECIBIDOS -->

    <!-- También puedes añadir un borde si lo deseas:
    <stroke android:width="1dp" android:color="#CCCCCC"/>
    -->
</shape>